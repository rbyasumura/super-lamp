@model Kendo.Web.Ui.Mvc.Areas.Tournaments.Models._RegistrationViewModel

@Html.HiddenFor(model => model.TournamentId)
@Html.LabelFor(model => model.ClubId)
@Html.TextBoxFor(model => model.ClubId)
<br />

<table>
    <thead>
        <tr>
            <th></th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Bogu or Non-Bogu</th>
            <th>Date of Birth</th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Registrants.Count; i++)
            {
            <tr>
                <td>
                    @(i + 1)
                    @Html.HiddenFor(model => model.Registrants[i].RegistrantId)
                </td>
                <td>@Html.TextBoxFor(model => model.Registrants[i].FirstName)</td>
                <td>@Html.TextBoxFor(model => model.Registrants[i].LastName)</td>
                <td>@Html.DropDownListFor(model => model.Registrants[i].SelectedDivisionIds[0], Model.Registrants[i].Divisions)</td>
                <td>@Html.TextBoxFor(model => model.Registrants[i].DateOfBirth, "{0:d}")</td>
            </tr>
        }
    </tbody>
</table>
